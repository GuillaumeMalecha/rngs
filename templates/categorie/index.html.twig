{% extends 'base.html.twig' %}

{% block title %}Toutes les catégories de produits{% endblock %}

{% block body %}
    <div class="page-title">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">

                    <h2 class="ipt-title">Toutes les catégories de produits</h2>
                    <span class="ipn-subtitle">Une liste qui vous aidera à trouver votre bonheur.</span>

                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <ul class="col-lg-8 col-md-10">
                {% for categorieWithPromotion in categoriesAvecPromotion %}
                    <i class="fas fa-star"></i>
                    <h3>Catégorie de produit en promotion : {{ categorieWithPromotion.categorie.nom }}</h3>
                    <p>{{ categorieWithPromotion.categorie.description }}</p>
                    <p>Promotion du moment : {{ categorieWithPromotion.promotion.pourcentage }}% de réduction !</p>
                    <p>Promotion valable à partir du {{ categorieWithPromotion.promotion.datedebut|date('d/m/Y') }} jusqu'au {{ categorieWithPromotion.promotion.datefin|date('d/m/Y') }}.</p>
                    <a href="{{ path ("detailcategorie", {id:categorieWithPromotion.categorie.id}) }}">
                        <button type="button" class="btn btn-secondary">En savoir plus</button>
                    </a>
                    <hr>
                {% endfor %}
            </ul>
        </div>
    </div>


    <div class="container">
        <div class="row justify-content-center">
            <ul class="col-lg-8 col-md-10">

                {% for categorie in categories %}

                <i class="fas fa-bookmark"></i>
                <h4>Catégorie de produit : {{ categorie.nom }}</h4>
                <p>{{ categorie.description }}</p>
                <a href="{{ path ("detailcategorie", {id:categorie.id}) }}">
                    <button type="button" class="btn btn-secondary">En savoir plus</button>
                </a>
                <hr>

                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
