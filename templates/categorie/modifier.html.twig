{% extends 'base.html.twig' %}

{% block title %}Modifier une catégorie de produit{% endblock %}

{% block body %}
    <!-- ============================ Page Title Start================================== -->
    <div class="page-title">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">

                    <h2 class="ipt-title">Modifier la catégorie de produit : {{ categorie.nom }}</h2>
                    <span class="ipn-subtitle">“L'homme absurde est celui qui ne change jamais.”</span>

                </div>
            </div>
        </div>
    </div>
    <!-- ============================ Page Title End ================================== -->

    <div class="container">
        <div class="row justify-content-center">
            <ul class="col-lg-8 col-md-10">
                <br>

                {{ form_start(form) }}

                {{ form_row(form.nom) }}

                {{ form_row(form.description) }}

                {{ form_end(form) }}

        </div>
    </div>

{% endblock %}


