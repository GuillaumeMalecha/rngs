{% extends 'base.html.twig' %}

{% block title %}Contact - RNGS{% endblock %}

{% block body %}

    <!-- ============================ Début du titre de la page ================================== -->
    <div class="page-title">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">

                    <h2 class="ipt-title">Contactez-nous</h2>
                    <span class="ipn-subtitle">Envoyez-nous votre message</span>

                </div>
            </div>
        </div>
    </div>
    <!-- ============================ Fin du titre de la page ================================== -->

    <!-- ============================ Début du formulaire de contact ================================== -->
    <section>

        <div class="container">

            <!-- row Start -->
            <div class="row">

                <div class="col-lg-7 col-md-7">

                    <div class="row">
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group">

                                {{ form_start(contact_form) }}
                                {{ form_row(contact_form.name, {'attr': {'class': 'form-control simple'}}) }}
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6">
                            <div class="form-group">
                                {{ form_row(contact_form.email, {'attr': {'class': 'form-control simple'}}) }}

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_row(contact_form.object, {'attr': {'class': 'form-control simple'}}) }}

                    </div>

                    <div class="form-group">
                        {{ form_row(contact_form.message, {'attr': {'class': 'form-control simple'}}) }}

                    </div>

                    <div class="form-group">
                        <button class="btn btn-theme" type="submit">Envoyer</button>
                    </div>
                    {{ form_end(contact_form) }}
                </div>

                <!-- ============================ Fin du formulaire de contact ================================== -->

                <!-- ============================ Début des informations de contact ================================== -->

                <div class="col-lg-5 col-md-5">
                    <div class="contact-info">

                        <h2>Restons en contact</h2>
                        <p>Vous avez une question ? Une suggestion ? Nous serons ravis de vous apporter la lumière.</p>

                        <div class="cn-info-detail">
                            <div class="cn-info-icon">
                                <i class="ti-home"></i>
                            </div>
                            <div class="cn-info-content">
                                <h4 class="cn-info-title">Nous écrire un parchemin</h4>
                                Rue de la Régence<br>4000 Liège<br>Belgique
                            </div>
                        </div>

                        <div class="cn-info-detail">
                            <div class="cn-info-icon">
                                <i class="ti-email"></i>
                            </div>
                            <div class="cn-info-content">
                                <h4 class="cn-info-title">Par e-mail</h4>
                                <a href="mailto:bonjour@bienetre.com">hello@rngs.com</a>
                            </div>
                        </div>

                        <div class="cn-info-detail">
                            <div class="cn-info-icon">
                                <i class="ti-mobile"></i>
                            </div>
                            <div class="cn-info-content">
                                <h4 class="cn-info-title">Nous appeler</h4>
                                <a href="tel:+32485121314">+32(0)485/12.13.14</a>
                            </div>
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </section>
    <!-- ============================ Fin des informations de contact ================================== -->



{% endblock %}