{% extends 'base.html.twig' %}

{% block title %}Profil du client{% endblock %}

{% block body %}

<div class="page-title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12">

                <h1 class="ipt-title">Profil du client {{ client.utilisateur.nomutilisateur }}</h1>

            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center">
        <ul class="col-lg-8 col-md-10">

            <div>
                <h2>Informations personnelles</h2>
                <p>Nom : {{ client.utilisateur.nom }}</p>
                <p>Prénom : {{ client.utilisateur.prenom }}</p>
                <p>Email : {{ client.utilisateur.email }}</p>
                <p>Téléphone : {{ client.telephone }}</p>
            </div>

            <div>
                <h2>Commandes</h2>
                <ul>
                    {% for commande in client.commandes %}
                        <li>Commande numéro : <a href="{{ path('detailcommande', {'id': commande.id}) }}">{{ commande.id }}</a>
                            - Date :
                            {{ commande.datecommande|date('d/m/Y') }} - Statut : {{ commande.statuscommande }}
                            <ul>
                                {% for produitCommande in commande.produitsCommandes %}
                                    <li>{{ produitCommande.produit.nom }} - {{ produitCommande.produit.prix }}€</li>
                                {% endfor %}


                            </ul>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </ul>
    </div>
</div>
            {% endblock %}
