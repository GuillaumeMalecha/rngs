                    </div>

                    <div class="tr-single-box">
                        <div class="tr-single-header">
                            <h4><i class="ti-direction"></i>Informations : {{ produit.description }}</h4>
                        </div>
                    </div>

                    <div class="tr-single-box">
                        <div class="tr-single-header">
                            <h4><i class="ti-direction"></i>Informations : {{ produit.categorie.description }}</h4>
                        </div>
                    </div>

                    <div class="tr-single-box">
                        <div class="tr-single-body">
                            <ul class="extra-service">
                                <li><a href="{{ path('panier_add', {id: produit.id}) }}">
