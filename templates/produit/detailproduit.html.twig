                            <h3 class="block-title">Description de : {{ produit.nom }}</h3>
                        </div>
                            <div class="block-header">
                                <h4 class="block-title"> {{ produit.categorie.nom }}</h4>
                            </div>
                            <div class="block-body">
                                <p>{{ produit.categorie.description }}
                            </div>
                        <div class="block-header">
                            <h4 class="block-title"> {{ produit.nom }}</h4>
                        </div>
                        <div class="block-body">
                            <p>{{ produit.description }}
                        </div>
                    </div>

                </div>
                <!-- Listing Sidebar -->
                <div class="col-lg-4 col-md-12 col-sm-12">


                    <div class="verified-list mb-4">
                        <i class="ti-check"></i>Produit certifi√© conforme
                    </div>

                    <div class="tr-single-box">
                        <div class="tr-single-header">
                            <h4><i class="ti-direction"></i>Informations : {{ produit.description }}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}