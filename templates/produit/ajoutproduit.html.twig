{% extends 'base.html.twig' %}

{% block title %}Ajouter un Produit{% endblock %}

{% block body %}

    <div class="page-title">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">

                    <h2 class="ipt-title">Ajouter un nouveau produit</h2>
                    <span class="ipn-subtitle">Enregistrez une nouvelle référence</span>

                </div>
            </div>
        </div>
    </div>
    <br>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">
                <h2>Ajouter un produit</h2>

                {{ form_start(form) }}

                {{ form_row(form.nom) }}
                {{ form_row(form.prix) }}
                {{ form_row(form.description) }}
                {{ form_row(form.categorie) }}
                {{ form_row(form.datesortie) }}
                <input type="file" name="produit[images_files][]" id="produit_image_1" class="form-control" >
                <input type="file" name="produit[images_files][]" id="produit_image_2" class="form-control" >
                <input type="file" name="produit[images_files][]" id="produit_image_3" class="form-control" >
                <input type="file" name="produit[images_files][]" id="produit_image_4" class="form-control" >

                {{ form_end(form) }}

            </div>
        </div>
    </div>

{% endblock %}


