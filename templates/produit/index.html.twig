{% extends 'base.html.twig' %}

{% block title %}Tous les Produits !{% endblock %}

{% block body %}
    <section class="gray-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 col-md-12">
                    <h2 class="ipt-title">Tous les Produits</h2>
                    <span class="ipn-subtitle">Une liste pour les consulter tous.</span>
                </div>
            </div>
        </div>
    </section>

    <section>
        <div class="container">
            <br>
            <ul>
                {% for produit in pagination %}
                    <li>
                        <i class="fas fa-bookmark"></i>
                        <h3>Nom du produit : {{ produit.nom }}</h3>
                        <p>Description : {{ produit.description }}</p>

                        <a href="{{ path ("detailproduit", {id:produit.id}) }}">
                            <button type="button" class="btn btn-theme">En savoir plus</button>
                        </a>
                        <br>
                        <br>
                    </li>
                {% endfor %}
            </ul>
        </div>
        {# Gestion de la pagination #}
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </section>

{% endblock %}
