{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}


    <section class="image-cover hero-banner" style="background:url(https://picsum.photos/1920/1000) no-repeat;"
             data-overlay="6">
        <div class="container">

            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="loving-modern-login">
                        <h3>S'inscrire pour votre bien-être</h3>
                        <div class="row main_login_form">
                            <div class="login_form_dm">

                                {{ form_start(registrationForm) }}
                                {{ form_row(registrationForm.email) }}
                                {{ form_row(registrationForm.plainPassword) }}

                                {{ form_row(registrationForm.agreeTerms, {
                                    label : 'Accepter les conditions d\'utilisation'}) }}

                                <p class="already-login">
                                    Déjà inscrit ? <a href="{{ path('app_login') }}" class="theme-cl">Se Connecter</a>
                                </p>
                                <button type="submit" class="btn btn-theme full-width">S'inscrire</button>
                                {{ form_end(registrationForm) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
